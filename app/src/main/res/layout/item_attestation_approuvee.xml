<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    android:clickable="true"
    android:focusable="true"
    app:strokeColor="@null"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/approuve_border">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nomComplet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nissrine EL MNIAI"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/approuve"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Métier -->
        <TextView
            android:id="@+id/departement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Developpement"
            android:textSize="13sp" />

        <!-- Type de Attestation -->
        <TextView
            android:id="@+id/TypeAttestation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attestation de travail"
            android:textSize="13sp"
            android:layout_marginTop="5dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/DateDemandee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demandée le 18 Octobre 2025"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/DateApprouvé"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approuvée le 18 Octobre 2025"
            android:textColor="@color/green"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/green" />

        <!-- Button -->
        <Button
            android:id="@+id/btnTelecharger"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="Télécharger PDF"
            android:textColor="@color/grey"
            android:background="@drawable/green_border"
            app:backgroundTint="@null"
            android:textStyle="bold"
            android:textSize="13sp"
             />



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
