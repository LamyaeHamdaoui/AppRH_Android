<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true"
    tools:context=".AttestationEmployeActivity">
    <!-- AJOUT: SwipeRefreshLayout -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="80dp"


            >

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_blue"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attestations"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/soldeCongeHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demandez vos attestations professionnelles"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- SOUS-HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/border_blue"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nouvelle attestation"
                            android:textColor="@color/grey_light"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Demandez un document officiel"
                            android:textColor="@color/grey_light"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_pdf"
                        android:background="@drawable/bg_rectangle_blue"
                        app:tint="@color/white"
                        android:padding="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnNouvelleDemandeConge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+  Faire une demande"
                    android:background="@drawable/border_button"
                    app:backgroundTint="@null"
                    android:layout_marginTop="10dp"
                    android:padding="0dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- BARRE STATUS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <!-- EN ATTENTE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_gris"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_orange_icones"
                        android:src="@drawable/en_attente"
                        android:padding="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/AttestaionAttente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En attente"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <!-- APPROUVÉS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_gris"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/border_icon_green"
                        android:src="@drawable/approuve"
                        android:padding="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/AttestationApprouve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approuvées"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <!-- Refusé -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_gris"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/border_red"
                        android:src="@drawable/refuse"
                        android:padding="12dp"
                        android:backgroundTint="@color/pink"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/attestationRefuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refusées"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>


            </LinearLayout>

            <!-- HISTORIQUE -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/border_gris"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/demandes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes demandes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:id="@+id/historiqueContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/demandes"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>



    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:paddingBottom="5dp"
        >

        <!-- ACCUEIL -->
        <LinearLayout
            android:id="@+id/Acceuil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/presence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/presence"
                app:tint="@color/grey"/>

            <TextView
                android:id="@+id/textemployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Présence"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <!-- CONGES -->
        <LinearLayout
            android:id="@+id/conges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/conge"/>

            <TextView
                android:id="@+id/textconge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congés"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <!-- REUNIONS -->
        <LinearLayout
            android:id="@+id/reunions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/reunion"/>

            <TextView
                android:id="@+id/textreunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réunions"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <!-- PROFIL -->
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profil"/>

            <TextView
                android:id="@+id/textprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
