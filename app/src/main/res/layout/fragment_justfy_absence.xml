<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JustifyAbsenceFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/border_vide"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Justifier une absence"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expliquez la raison de votre absence"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Justification"
            android:textStyle="bold"
            android:paddingTop="18dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/justificationInput"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Rendez-vous mÃ©dical, urgence familiale, etc."
            android:gravity="top|start"
            android:background="@drawable/border"
            android:padding="12dp"
            android:textSize="15sp"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/btnEnvoyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            app:backgroundTint="@null"
            android:background="@drawable/border_button"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</FrameLayout>