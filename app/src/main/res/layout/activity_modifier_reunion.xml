<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cotearrondi"
        android:padding="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Close -->
        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="✕"
            android:textSize="22sp"/>

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier une réunion"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <!-- Sous-titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier les informations de votre réunion"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Titre réunion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre de la réunion *"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/titrereunion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Ex : Réunion d'équipe"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:inputType="text"/>

        <!-- Date & Heure -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date *"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/dateReunion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="jj/mm/aaaa"
                    android:inputType="date"
                    android:background="@drawable/border"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- Heure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heure *"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/heureReunion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="-- : --"
                    android:inputType="time"
                    android:background="@drawable/border"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Lieu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu *"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/lieuReunion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Salle de conférence A"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <!-- Département -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Département *"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <Spinner
            android:id="@+id/departementReunion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:entries="@array/departements"
            android:layout_marginBottom="15dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description (optionnelle)"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/descriptionReunion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Ordre du jour et points à discuter"
            android:background="@drawable/border"
            android:padding="10dp"
            android:gravity="top"
            android:layout_marginBottom="20dp"/>

        <!-- Bouton Modifier -->
        <Button
            android:id="@+id/btnCreerReunion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Modifier la réunion"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/border_button"
            app:backgroundTint="@null"/>
    </LinearLayout>
</ScrollView>
