<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongesEmploye"
    android:background="#F5F5F5"
    >
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="15dp"
    tools:context=".AcceuilEmployeActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--  hadi header section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_blue"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingBottom="40dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonjour,"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                     />


            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CHAHLAL Ikram"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:text="Développeur Senior • Développement"
                android:textColor="@color/white"
                android:textSize="13sp" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/border_blue"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:elevation="8dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/approuve"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Présence"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marquée"
                        android:textColor="#0FAC71"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                <!-- separateur vertical -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                  />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/calendrierbleu"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solde congés"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 jours"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                <!-- separateur vertical -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                  />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/userpurple"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Réunions"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 à venir"
                        android:textSize="14sp"
                        android:textColor="#D000D0"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions rapides"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!-- hadi dyal employee total -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/border_gris"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="20dp"

                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_rectangle_blue"
                        android:src="@drawable/check24"
                        app:tint="@color/white"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marquer Présence"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/border_gris"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_green"
                            android:src="@drawable/conge"
                            app:tint="@color/white"
                            android:padding="10dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Demander congés"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/congeb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"

                        android:background="@drawable/notification_badge"                   android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="visible"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_gris"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:id="@+id/attestation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="20dp"
                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/docborder"
                                android:src="@drawable/doc24"
                                app:tint="@color/white"
                                android:padding="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attestations"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_marginTop="15dp"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <TextView

                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-2dp"
                            android:layout_marginEnd="-2dp"

                            android:background="@drawable/notification_badge"                   android:gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="visible"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_gris"
                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"

                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_orange_hover"
                            android:src="@drawable/employe"
                            app:tint="@color/white"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Réunions"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cotearrondi"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/attention"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications récentes"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/recentborder"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- 1 er ligne-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/orangecalendar"

                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="Demande de congé en attente"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>
                <!-- 2 eme ligne -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:text="En cours de validation par RH"
                    android:textColor="#666666"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/recentborder2"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- 1 er ligne-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/userb"

                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="Réunion d'équipe demain"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>
                <!-- 2 eme ligne -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:text="Il y'a 3h"
                    android:textColor="#666666"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
android:layout_gravity="top|end">

<ImageView
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:src="@drawable/bell"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"/>

<TextView
    android:layout_width="25dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/notification_border"
    android:backgroundTint="@color/red"
    android:text="0"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textAlignment="center"
    />
</RelativeLayout>
<LinearLayout
android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="8dp"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    >
<LinearLayout
    android:id="@+id/acceuilfooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/accueil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/home" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accueil"
        android:textSize="15sp"
        android:textColor="@color/grey"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/presencefooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconPresence"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/presence" />

    <TextView
        android:id="@+id/textPresence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Présence"
        android:textSize="15sp"
        android:textColor="@color/grey"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/congesfooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/conge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/conge" />

    <TextView
        android:id="@+id/textconge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congés"
        android:textSize="15sp"
        android:textColor="@color/grey"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/reunionsfooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reunions"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/reunion" />

    <TextView
        android:id="@+id/textreunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réunions"
        android:textSize="15sp"
        android:textColor="@color/grey"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/profilefooter"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/profil"/>

    <TextView
        android:id="@+id/textprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="15sp"
        android:textColor="@color/grey"/>
</LinearLayout>
</LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>