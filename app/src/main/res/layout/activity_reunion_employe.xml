<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".reunionActivity"
    android:background="#F5F5F5">
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"


        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="80dp"

            >

            <!-- header -->

            <!-- ***** header ****** -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header_blue"
                android:layout_margin="10dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gestion des réunions"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Planification et organisation"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!--***** Sous header **-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:background="@drawable/border_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_roseclair">

                            <ImageView

                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:maxWidth="30dp"
                                android:src="@drawable/conge_rose" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/nbrReunionVenir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="À venir"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_green">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:maxWidth="30dp"
                                android:src="@drawable/valider_icon" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/nbrReunionConfirmer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Confirmées "
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="5sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_blueclair">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:maxWidth="30dp"
                                android:src="@drawable/employe_bleu" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/nbrReunionsMois"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ce mois"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>
                </LinearLayout>

            <!--- ******* no reunion  container  *******  -->
            <LinearLayout
                android:id="@+id/noReunionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="40dp"
                android:visibility="gone"
                android:background="@drawable/border_gris"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reunion"
                    android:layout_marginBottom="10dp"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Aucune réunion disponible"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Aucune réunion n’a été programmée pour le moment."
                    android:textSize="13sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            <!-- reunions planifié container  -->
            <LinearLayout
                android:id="@+id/reunionPlanifieContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/border_gris"
                android:visibility="visible"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="92dp"
                    android:text="Réunions à venir"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    />



            </LinearLayout>


            <!--- ******* no reunion  container venirs  *******  -->
            <LinearLayout
                android:id="@+id/noReunionContainerVenirs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:visibility="gone"
                android:background="@drawable/border_gris"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reunion"
                    android:layout_marginBottom="10dp"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Aucune réunion prévue"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Votre service n’a rien programmé."
                    android:textColor="@color/grey"
                    android:textSize="13sp" />

            </LinearLayout>


            <!--- *******  reunion passe  container *******  -->
            <LinearLayout
                android:id="@+id/reunionPasseContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_gris"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginRight="92dp"
                    android:text="Réunions passées"
                    android:textSize="18sp" />
            </LinearLayout>


            <!--- ******* no reunion  container passee  *******  -->
            <LinearLayout
                android:id="@+id/noReunionContainerPasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:visibility="gone"
                android:background="@drawable/border_gris"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/time"
                    android:layout_marginBottom="10dp"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Historique vide"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Vous n'avez pas encore eu de réunions."
                    android:textColor="@color/grey"
                    android:textSize="13sp" />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:paddingBottom="7dp"
        >

        <LinearLayout
            android:id="@+id/accueil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconaccueil"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/presence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconpresence"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/presence"
                app:tint="@color/grey"/>

            <TextView
                android:id="@+id/textpresence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Présence"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/conge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconconge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/conge" />

            <TextView
                android:id="@+id/textconge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congés"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reunions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#4669EB"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="3dp"
                />

            <ImageView
                android:id="@+id/iconreunions"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/reunion_bleu" />

            <TextView
                android:id="@+id/textreunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réunions"
                android:textColor="#4669EB"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconprofil"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profil" />

            <TextView
                android:id="@+id/textprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>