<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="#F5F5F5"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Carte principale -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:padding="24dp">

                <!-- Titre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Changer le mot de passe"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pour votre sécurité, choisissez un mot de passe fort"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="24dp" />

                <!-- Mot de passe actuel -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe actuel"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entrez votre mot de passe actuel"
                        android:background="@drawable/border"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nouveau mot de passe -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nouveau mot de passe"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#666666"
                    app:helperText="8 caractères minimum, avec majuscule et chiffre"
                    app:helperTextTextColor="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Choisissez un nouveau mot de passe"
                        android:inputType="textPassword"
                        android:background="@drawable/border"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmation nouveau mot de passe -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmer le nouveau mot de passe"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmez votre nouveau mot de passe"
                        android:inputType="textPassword"
                        android:background="@drawable/border"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Indicateur de force du mot de passe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Force du mot de passe"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/passwordStrengthBar"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#FF5252" />

                    <TextView
                        android:id="@+id/tvPasswordStrength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Faible"
                        android:textSize="12sp"
                        android:textColor="#FF5252"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Exigences mot de passe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Votre mot de passe doit contenir :"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLengthRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✗ Au moins 8 caractères"
                        android:textSize="12sp"
                        android:textColor="#FF5252" />

                    <TextView
                        android:id="@+id/tvUppercaseRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✗ Une lettre majuscule"
                        android:textSize="12sp"
                        android:textColor="#FF5252" />

                    <TextView
                        android:id="@+id/tvNumberRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✗ Un chiffre"
                        android:textSize="12sp"
                        android:textColor="#FF5252" />

                    <TextView
                        android:id="@+id/tvSpecialRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Un caractère spécial (optionnel)"
                        android:textSize="12sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <!-- Boutons d'action -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Annuler"
                        android:textColor="#666666"
                        android:background="@drawable/border"
                        android:layout_marginEnd="8dp"
                        app:backgroundTint="@null"/>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Enregistrer"
                        android:textColor="@color/white"
                        android:background="@drawable/border_button"
                        android:layout_marginStart="8dp"
                        app:backgroundTint="@null"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Section Mot de passe oublié -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe oublié ?"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Réinitialiser"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>