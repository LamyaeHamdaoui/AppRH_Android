<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:backgroundTint="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/border">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titreReunion"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Bilan mensuel"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/statutReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/border_gris"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="terminé" />
        </RelativeLayout>

        <!-- DATE -->
        <TextView
            android:id="@+id/dateReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Mercredi 12 Octobre 2024 - 11:30"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <!-- LIEU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconDate"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/localisation"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/lieuReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Salle de conférence B"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- PARTICIPANTS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconParticip"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/employe"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/participants"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="15 participants"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
