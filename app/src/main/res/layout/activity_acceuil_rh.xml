<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F5F5"
    tools:context=".AcceuilRhActivity">


    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:background="#F5F5F5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="80dp"

           >

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_blue"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingLeft="25dp"
                android:paddingBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tableau de bord RH"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/rhConnecte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Responsable"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="15dp"
                    android:text="Responsable RH"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Stats Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/border_blue"
                android:orientation="vertical"
                android:padding="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:elevation="8dp"

               >

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Employees -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@id/employes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_departement_blue"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="13dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/employe_bleu"
                                app:tint="@color/blue_hover" />

                            <TextView
                                android:id="@+id/totalEmploye"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Employés total"
                                android:textColor="@color/grey"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Today's Presence -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/presence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="15dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/presence"
                                app:tint="@color/green" />

                            <TextView
                                android:id="@+id/totalPresents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Présents aujourd'hui"
                                android:textColor="@color/grey"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pending Leaves -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/conges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_orangelight"
                            android:backgroundTint="@color/orange_light2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="13dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/conge"
                                app:tint="@color/orange" />

                            <TextView
                                android:id="@+id/congeEnAttente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Congés en attente"
                                android:textColor="@color/grey"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Certificates -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/attestation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/purple_light"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="15dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/doc24"
                                app:tint="#800080" />

                            <TextView
                                android:id="@+id/attestationEnAttente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Attestations"
                                android:textColor="@color/grey"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Actions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Actions rapides"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"/>

            <!-- First Quick Actions Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <!-- Employee Management -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:id="@+id/actionPresence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">



                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_rectangle_blue"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/presence"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Présences"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                        <TextView
                            android:id="@+id/notifPresence"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="-1dp"
                            android:background="@drawable/notification_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone" />


                </androidx.cardview.widget.CardView>

                <!-- Validate Leaves -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">


                        <LinearLayout
                            android:id="@+id/ActionConge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/calendrierborder"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/calendrierblanc" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text=" Valider congés"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/notifConge"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="-1dp"
                            android:background="@drawable/notification_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second Quick Actions Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <!-- Certificates -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">



                        <LinearLayout
                            android:id="@+id/actionAttestation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/docborder"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/document" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Attestation"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/notifAttestation"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="-1dp"
                            android:background="@drawable/notification_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone" />

                </androidx.cardview.widget.CardView>

                <!-- Meetings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">



                    <LinearLayout
                        android:id="@+id/actionReunions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_orange_hover"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/remot" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Réunions"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/notifReunion"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="-1dp"
                        android:background="@drawable/notification_badge"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Alert Card -->
            <LinearLayout
                android:id="@+id/alertCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/cartedevoir"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/alerticon"
                        app:tint="#FF6B6B" />



                        <TextView
                            android:id="@+id/absenceNonJustifie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="absences non justifiées"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_weight="2"/>



                    <TextView
                        android:id="@+id/btnVoirAbsences"
                    android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btnvoir"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="Voir"
                        android:textColor="#A3232B"
                        android:textSize="12sp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:text="Nécessitent votre attention"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Recent Activities -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:padding="16dp"
                android:background="@drawable/border_gris"

                >

                    <ImageView
                        android:id="@+id/zigzag"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/zigzag"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />



                    <TextView
                        android:id="@+id/activitesRecentes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activités récentes"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@+id/zigzag"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/aucuneActiviteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aucune nouvelle activité pour le moment"
                    android:textSize="13sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/activitesRecentes"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                  />

                <LinearLayout
                    android:id="@+id/activitesRecentesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/zigzag"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"

                    />





            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Department Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Taux de présence par département"
                            android:textSize="18sp" />

                        <!-- Réutilise le même layout pour chaque statistique -->
                        <include
                            android:id="@+id/statDev"
                            layout="@layout/item_statistique" />

                        <include
                            android:id="@+id/statMarketing"
                            layout="@layout/item_statistique" />

                        <include
                            android:id="@+id/statSales"
                            layout="@layout/item_statistique" />

                        <include
                            android:id="@+id/statSport"
                            layout="@layout/item_statistique" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:paddingBottom="7dp"
        >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#4669EB"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="3dp"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home"
                    app:tint="#4669EB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Accueil"
                    android:textColor="#4669EB"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/employes_interface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/employes"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/employe" />

                <TextView
                    android:id="@+id/textemployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Employés"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/conges_interface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/conge"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/conge" />

                <TextView
                    android:id="@+id/textconge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Congés"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reunions_interface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/reunions"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/reunion" />

                <TextView
                    android:id="@+id/textreunion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Réunions"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_interface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profil"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:maxWidth="30dp"
                    android:src="@drawable/profil" />

                <TextView
                    android:id="@+id/textprofil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Profil"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>