<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:fillViewport="true"
    android:background="#F5F5F5"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Titre principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demande de congé"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- Sous-titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remplissez les informations de votre demande"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            />
        <!-- Type de congé -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type de congé"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/typeConge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:entries="@array/types_conge"
            />




        <!-- Date debut -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de début"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/dateDebutConge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" jj/mm/aaaa "
            android:inputType="date"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:padding="5dp"/>

        <!-- Date fin -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de fin"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/dateFinConge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" jj/mm/aaaa"
            android:inputType="date"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:padding="5dp"/>

        <!-- Motif -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motif"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/MotifConge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Expliquez brièvement la raison de votre demande"
            android:textSize="15dp"
            android:inputType="textLongMessage"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:padding="5dp"/>


        <!-- Section Ajuster l'employé -->
        <Button
            android:id="@+id/btnEnvoyerDemande"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Envoyer demande"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@null"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/border_button"
            app:backgroundTint="@null"
            android:padding="0dp"
            />

    </LinearLayout>
</ScrollView>