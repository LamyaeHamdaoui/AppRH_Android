<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresenceRhActivity"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="center"
        android:id="@+id/scrollView2"
        app:layout_anchor="@+id/scrollView2"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ***** header ****** -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header_blue"
                android:layout_margin="10dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gestion de présence"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suivi et validation des présences"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!--- ****** Sous header ****** -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_blue"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/totalLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/employe_bleu"
                            android:background="@drawable/border_icon_blue"
                            android:padding="6dp" />

                        <TextView
                            android:id="@+id/nbreTotalConge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/grey_light"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/approuveLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/approuve"
                            android:background="@drawable/border_green"
                            android:padding="6dp" />

                        <TextView
                            android:id="@+id/nbreApprouveConge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Présents"
                            android:textColor="@color/grey_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/refuseLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/refuse"
                            android:background="@drawable/border_icon_red"
                            android:padding="6dp" />

                        <TextView
                            android:id="@+id/nbreRefuseConge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="0"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Absents"
                            android:textColor="@color/grey_light"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/attenteLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/attention"
                            android:background="@drawable/bg_orange_icones"
                            android:padding="6dp"
                            app:tint="@color/orange"
                            />

                        <TextView
                            android:id="@+id/nbreAttenteConge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Justifiés"
                            android:textColor="@color/grey_light"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gris_clair" />
                <LinearLayout
                    android:id="@+id/tauxPresenceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taux de présence"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bar_background"
                            android:layout_marginEnd="8dp"
                            >
                            <View
                                android:id="@+id/progressFill"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/progress_bar_fill_green"
                                />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/nombreTaux"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0%"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/border_gris"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">


                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="18dp"
                        android:src="@drawable/calendar"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/datePresence"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="JJ-MM-AAAA"
                        android:padding="10dp"
                        android:layout_marginStart="30dp"
                        android:textColor="@color/black"
                        android:inputType="text"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Département"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/departement"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border"
                    android:padding="4dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/departements_recherche" />
            </LinearLayout>

            <!-- *** barre attente refuse approuve *** -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_button"
                android:backgroundTint="#DEDEDE"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCongeAttente"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_tab_selected"
                    android:text="Tous"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:padding="0dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/btnCongeApprouve"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_tab_unselected"
                    android:text="Présents"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:padding="0dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/btnCongeRefuse"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_tab_unselected"
                    android:text="Absents"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:padding="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- **** En attente Container **** -->
            <LinearLayout
                android:id="@+id/viewCongeAttente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_margin="5dp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/notificationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top|end"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bell"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/notification_border"
            android:backgroundTint="@color/red"
            android:text="0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/footerAccueil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/accueil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textSize="15sp"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerEmployes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingPrefix">

            <ImageView
                android:id="@+id/employes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/employe" />

            <TextView
                android:id="@+id/textemployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Employés"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerConges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/conge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/conge" />

            <TextView
                android:id="@+id/textconge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congés"
                android:textSize="15sp"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerReunions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reunions"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/reunion" />

            <TextView
                android:id="@+id/textreunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réunions"
                android:textSize="15sp"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footerProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:maxWidth="30dp"
                android:src="@drawable/profil"/>

            <TextView
                android:id="@+id/textprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="15sp"
                android:textColor="@color/grey"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>