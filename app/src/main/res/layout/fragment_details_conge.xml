<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Overlay semi-transparent pour l'arrière-plan -->
    <View
        android:id="@+id/backgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true" />

    <!-- Carte des détails -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/detailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="@drawable/border_gris"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Détails de la demande"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal" />

            <!-- Informations employé -->
            <TextView
                android:id="@+id/sousDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center" />

            <!-- Type de congé -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de congé"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/typeConge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <!-- Période -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Période"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/datesConge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <!-- Motif -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motif"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/MotifConge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <!-- Solde de congés -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solde de congés actuel:"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/soldeCongesEmploye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="5dp" />

            <!-- Raison du refus -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raison du refus (optionnel)"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/raisonrefusConge"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Expliquez la raison de refus..."
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/border"
                android:padding="12dp"
                android:maxLines="4"
                android:scrollbars="vertical"/>

            <!-- Boutons Approuver/Refuser -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <!-- Bouton Approuver -->
                <LinearLayout
                    android:id="@+id/btnApprouver"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/approuve_blanc"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approuver"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <!-- Bouton Refuser -->
                <LinearLayout
                    android:id="@+id/btnRefuser"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/reffuse_blanc"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refuser"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>