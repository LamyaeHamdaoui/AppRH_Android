<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/border_gris">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails de la demande"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />


        <!-- *****Sold actuel  ********-->




        <!--****** departement congé **** -->
        <TextView
            android:id="@+id/sousDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EL AAMMARI Oumeyma - Développement"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <!-- ******* type congé ******-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de congé"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/typeConge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congés payés"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            />

        <!-- Dates -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Période"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/datesConge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 nov. 2025 - 22 nov. 2025"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp" />

        <!-- Motif -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/MotifConge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccances en famille"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solde de congés actuel:"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/soldeCongesEmploye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 jours"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:textSize="17sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raison du refus (optionnel)"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/grey"/>

        <EditText
            android:id="@+id/raisonrefusConge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Expliquez la raison de refus ..."
            android:textSize="15dp"
            android:inputType="textLongMessage"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:textStyle="bold"
            android:padding="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >

            <RelativeLayout
                android:id="@+id/btnApprouver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_green"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/approuve_blanc"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approuver"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:textSize="12sp"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnRefuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_red"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/reffuse_blanc"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Refuser"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:textSize="12sp"                    />

            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>