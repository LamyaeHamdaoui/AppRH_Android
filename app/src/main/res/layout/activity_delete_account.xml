<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAccountActivity">
    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Carte d'avertissement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_redlight"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_warning"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    app:tint="#F44336" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supprimer définitivement votre compte"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cette action est irréversible. Toutes vos données seront perdues."
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Section Conséquences -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ce qui sera supprimé"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- Profil utilisateur -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_red"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Votre profil utilisateur et informations personnelles"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Données RH -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_red"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vos données RH et historiques professionnels"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Historique congés -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_red"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Votre historique de congés et demandes"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Documents -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_red"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tous vos documents et fichiers uploadés"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Accès -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_red"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Votre accès à l'application RH"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Section Confirmation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmer la suppression"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- Mot de passe -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe actuel"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entrez votre mot de passe pour confirmer"
                        android:inputType="textPassword"
                        android:background="@drawable/border"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmation écrite -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tapez \'SUPPRIMER MON COMPTE\' pour confirmer"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etConfirmationText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="SUPPRIMER MON COMPTE"
                    android:background="@drawable/border"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Checkbox de confirmation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbUnderstand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Je comprends que cette action est irréversible et que toutes mes données seront définitivement perdues."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Section Alternatives -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alternatives à la suppression"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- Désactiver le compte -->
                <LinearLayout
                    android:id="@+id/layoutDeactivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pause"
                        app:tint="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Désactiver temporairement mon compte"
                        android:textColor="#2196F3"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Exporter données -->
                <LinearLayout
                    android:id="@+id/layoutExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_export"
                        app:tint="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Exporter mes données avant suppression"
                        android:textColor="#2196F3"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Contacter support -->
                <LinearLayout
                    android:id="@+id/layoutSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_support"
                        app:tint="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contacter le support technique"
                        android:textColor="#2196F3"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Bouton de suppression -->
            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Supprimer définitivement mon compte"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/border_red"
                android:layout_marginBottom="32dp"
                android:enabled="false"
                app:backgroundTint="@null"/>

            <!-- Informations légales -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conformément au RGPD, vous avez le droit de demander la suppression de vos données personnelles. Cette action peut prendre jusqu'à 30 jours pour être traitée complètement."
                android:textSize="12sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>