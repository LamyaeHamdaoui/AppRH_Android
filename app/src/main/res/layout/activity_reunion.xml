<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@color/blue"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="379dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_header_blue">

                <LinearLayout
                    android:layout_width="317dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Gestion des réunions"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Planification et organisation"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="49dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bell" />
            </LinearLayout>
        </LinearLayout>

        <!--center de la page -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFECEC"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="356dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginTop="60dp"

                        android:background="@drawable/border_button"
                        android:text="+ Planifier un reunion"
                        app:backgroundTint="@null" />

                    <LinearLayout
                        android:layout_width="356dp"
                        android:layout_height="139dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:background="@drawable/border_reunion"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="58dp"
                                android:layout_height="53dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_roseclair">

                                <ImageView

                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:maxWidth="30dp"
                                    android:src="@drawable/calendar" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="À venir"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="58dp"
                                android:layout_height="53dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_green">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:maxWidth="30dp"
                                    android:src="@drawable/calendar" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Participants  "
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="58dp"
                                android:layout_height="53dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_blueclair">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:maxWidth="30dp"
                                    android:src="@drawable/calendar" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="0" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Passées"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>


                    <!-- reunions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:text="Réunions à venir"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="356dp"
                        android:layout_height="196dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"

                        android:background="@drawable/border_reunion"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="269dp"
                                android:layout_height="33dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="Réunion d'équipe hebdomadaire"
                                android:textAlignment="textStart"
                                android:textSize="17sp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:maxWidth="30dp"
                                android:src="@drawable/edit" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:maxWidth="30dp"
                                android:src="@drawable/delete" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="96dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_7jours"
                                android:text="Dans -7 jours"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/conges" />

                            <TextView
                                android:layout_width="296dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="Mardi 21 octobre 2025" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/conges" />

                            <TextView
                                android:layout_width="296dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="10:30 " />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/conges" />

                            <TextView
                                android:layout_width="296dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="salle de conference A" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/conges" />

                            <TextView
                                android:layout_width="296dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="12"
                                android:text="10/12 confirmes" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <!-- footer de la page -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/accueil"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home2" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accueil"
                        android:textSize="15dp"
                        android:textColor="@color/grey"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/employes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/team2" />

                    <TextView
                        android:id="@+id/textemployee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employés"
                        android:textSize="15dp"
                        android:textColor="@color/grey"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/conge"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/conge" />

                    <TextView
                        android:id="@+id/textconge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Congés"
                        android:textSize="15dp"
                        android:textColor="@color/grey"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/reunions"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reunion" />

                    <TextView
                        android:id="@+id/textreunion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Réunions"
                        android:textSize="15dp"
                        android:textColor="@color/grey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profil"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:maxWidth="30dp"
                        android:src="@drawable/profil"/>

                    <TextView
                        android:id="@+id/textprofil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profil"
                        android:textSize="15dp"
                        android:textColor="@color/grey"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>