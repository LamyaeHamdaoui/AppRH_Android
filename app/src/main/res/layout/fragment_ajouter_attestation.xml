<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    >


        <!-- Section demande d'attestation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_vide"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:elevation="1dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demande d'attestation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ©lectionnez le type d'attestation dont vous avez besoin"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp" />

            <!-- Type d'attestation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type d'attestation"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/TypeAttestation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border"
                android:padding="4dp"
                android:entries="@array/type_attestation"/>

            <!-- Motif de la demande -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motif de la demande"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/motifEditText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border"
                android:padding="15dp"
                android:hint="Indiquez la raison de votre demande (optionnel)"
                android:gravity="top"
                android:textColorHint="#999"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                />

            <!-- Bouton Demander -->
            <Button
                android:id="@+id/btnEnvoyerDemande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envoyer la demande"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:background="@drawable/border_button"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:padding="0dp"/>

        </LinearLayout>
</ScrollView>